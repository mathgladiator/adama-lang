int assign;
int hex;

@construct {
  assert 1 < 2;
  assert 1 <= 3;
  assert 1 < 2.0;
  assert 1 <= 3.0;
  assert 2 > 1;
  assert 3 >= 1;
  assert 2.0 > 1;
  assert 2.0 >= 1;
  assert 2 == 2;
  assert 2 != 3;
  assert 1 + 1 == 2;
  assert 1 + 2.0 == 3.0;
  assert 1 + " donkey" == "1 donkey";
  assert 1 + 1 == 2;
  assert 2.0 + 1 == 3.0;
  assert "#" + 1 == "#1";
  if (4 / 2 as x1) {
    assert x1 > 1;
  } else {
    assert false;
  }
  if (5.0 / 2 as x2) {
    assert x2 > 1.9;
  } else {
    assert false;
  }
  assert 10 % 3 > 0;
  assert 2 * 3 > 5;
  assert 2 * 3.0 > 5;
  assert 2.0 * 3 > 5.9;

  assign = 0;
  assign += 100;
  assign *= 3;
  assign -= 17;
  hex = 0x123fb;
}