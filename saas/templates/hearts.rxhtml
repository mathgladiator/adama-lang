            </connection>
            <connection name="dan_hearts" space="$TEMPLATE_SPACE" key="demo-{view:session_id}" identity="direct:anonymous:dan">
                <div rx:template="hearts_player">Dan</div>
                <div rx:disconnected>
                    Connecting...
                </div>
            </connection>
        </div>
    </page>
